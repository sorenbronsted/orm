    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Phpunit debug script",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/phpunit",
            "cwd": "${workspaceFolder}",
            "env": {
              "XDEBUG_CONFIG": "idekey=VSCODE remote_enable=1"
            },
            "args": [
              "${file}",
              // "--filter",
              // "testCanCreateValid"
            ],
            "port": 9000
          },
          {
            "name": "Phpunit debug method",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/phpunit",
            "cwd": "${workspaceFolder}",
            "env": {
              "XDEBUG_CONFIG": "idekey=VSCODE remote_enable=1"
            },
            "args": [
              "${file}",
              "--filter",
              "${selectedText}"
            ],
            "port": 9000
          }
    ]
}